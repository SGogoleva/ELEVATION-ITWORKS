    "drizzle-orm": "^0.30.9",
    "envalid": "^8.0.0",
    "eslint-config-love": "^47.0.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.6.2",
    "mongodb-memory-server": "^9.2.0",
    "mongoose": "^8.4.0",
    "mysql2": "^3.9.7",
    "swagger-jsdoc": "^6.2.8",
